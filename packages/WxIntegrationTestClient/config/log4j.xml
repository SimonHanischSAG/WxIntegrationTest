<?xml version="1.0" encoding="UTF-8"?>

<!-- Optional definition for usage of WxLog2 -->


<!DOCTYPE log4j:configuration SYSTEM "../../WxConfig/code/jars/log4j.dtd">
<log4j:configuration>
  <appender name="WxIntTstClient"
    class="org.apache.log4j.RollingFileAppender">
      <param name="MaxFileSize" value="10MB" />
      <param name="MaxBackupIndex" value="10" />
      <param name="DatePattern" value="'.'yyyyMMdd" />
      <param name="Append" value="true" />
      <param name="File" value="./logs/WxIntTstClient.log" />
      <param name="threshold" value="trace"/>
      <layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" value="%d %-5p - %m%n" />
      </layout>
  </appender>

  <category name="WxIntTstClient">
    <appender-ref ref="WxIntTstClient"/>
  </category>

</log4j:configuration>
